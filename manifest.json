{
  "manifest_version": 3,
  "name": "TubeAI",
  "version": "1.0.0",
  "description": "Enhance your YouTube learning with pause detection and interactive tools.",
  "icons": {
    "128": "icons/icon.jpg"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.jpg"
  }
}
